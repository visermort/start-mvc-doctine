{% extends 'layouts/main.twig' %}

{% block content %}

    <div class="row">
        <div class="col-md-8">
            <h3>Login</h3>
            <form name="sentMessage" id="create-task" method="post">
                <input type="hidden" name="csrf" value="{{ csrf() }}">
                <div class="control-group form-group">
                    <div class="controls">
                        <label for="email">Email:</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email"  required data-validation-required-message="Please enter your email."
                               value="{{ old.email ? old.email : '' }}">
                        <p class="help-block">{{ errors.email ? errors.email : '' }}</p>
                    </div>
                </div>
                <div class="control-group form-group">
                    <div class="controls">
                        <label for="password">Password:</label>
                        <input type="password" class="form-control" placeholder="Enter your password"  name="password"  id="password" data-validation-required-message="Please enter your password."
                               value="">
                        <p class="help-block">{{ errors.password ? errors.password : '' }}</p>
                    </div>
                </div>
                <div id="success">{{ errors.csrf ? errors.csrf : '' }}</div>
                <!-- For success/fail messages -->
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>
